{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declarationMap": true,
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "example",
    "node_modules",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ]
}
